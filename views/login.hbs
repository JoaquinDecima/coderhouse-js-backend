<div class="container" style="margin-top:20px; margin-bottom:20px;">
  <div class="row">

    <div class="col-md-1"></div>
    <div class="col-md-12 container-fluid">
      <div class="row">
        <div class="col-md-4" id="login-img"></div>
        <div class="col-md-8 container cont-log">
          <form class="row" action="/api/login/" method="post">

            <h1 class="text-center">Iniciar Sesion</h1>
            <div class="input-group">
              <span class="input-group-text" id="basic-addon1">@</span>
              <input
                type="email"
                class="form-control"
                placeholder="Email del Usuario"
                aria-label="Email del Usuario"
                id="mail"
                name="username"
                aria-describedby="basic-addon1"
                required />
            </div>
            <div class="input-group">
              <span class="input-group-text" id="basic-addon1">
                <i class="fa fa-key" aria-hidden="true"></i>
              </span>
              <input
                type="password"
                class="form-control"
                placeholder="Contraseña"
                aria-label="Contraseña"
                id="password"
                name="password"
                aria-describedby="basic-addon1"
                required />
            </div>
            <div class="input-group mb-3"></div>
              <button
                class="btn btn-outline-secondary btn-primary"
                type="submit">
                Enviar
              </button>
              <p class="text-center">Si no tienes una cuenta puedes registrarte <a href="/register/">aqui</a></p>
          </form >

          </div>
        </div>
      </div>
    </div>
    <div class="col-md-1"></div>
    
  </div>
</div>

