<div class="col-12" style="margin-top: 35px; margin-bottom: 20px;">
  <h2 class="text-center">Chat</h2>
  <form class="card">
    <div class="card-header container-fluid">
      <div class="row">
        <div class="col-6">
          <div class="input-group">
            <span class="input-group-text" id="basic-addon1">Nombre</span>
            <input
              type="text"
              class="form-control"
              placeholder="Nombre del Usuario"
              aria-label="Nombre del Usuario"
              id="chat-name"
              aria-describedby="basic-addon1"
              required />
          </div>
        </div>
        <div class="col-6">
          <div class="input-group">
            <span class="input-group-text" id="basic-addon1">Apellido</span>
            <input
              type="text"
              class="form-control"
              placeholder="Apellido del Usuario"
              aria-label="Apellido del Usuario"
              id="chat-lastname"
              aria-describedby="basic-addon1"
              required />
          </div>
        </div>
        <div class="col-8">
          <div class="input-group">
            <span class="input-group-text" id="basic-addon1">Alias</span>
            <input
              type="text"
              class="form-control"
              placeholder="Alias del Usuario"
              aria-label="Alias del Usuario"
              id="chat-alias"
              aria-describedby="basic-addon1"
              required />
          </div>
        </div>
        <div class="col-4">
          <div class="input-group">
            <span class="input-group-text" id="basic-addon1">Edad</span>
            <input
              type="number"
              class="form-control"
              placeholder="Edad del Usuario"
              aria-label="Edad del Usuario"
              id="chat-edad"
              aria-describedby="basic-addon1"
              required />
          </div>
        </div>
        <div class="input-group">
          <span class="input-group-text" id="basic-addon1">Avatar</span>
          <input
            type="text"
            class="form-control"
            placeholder="URL del Avatar"
            aria-label="URL del Avatar"
            id="chat-avatar"
            aria-describedby="basic-addon1"
            required />
        </div>
        <div class="input-group">
          <span class="input-group-text" id="basic-addon1">@</span>
          <input
            type="email"
            class="form-control"
            placeholder="Email del Usuario"
            aria-label="Email del Usuario"
            id="chat-mail"
            aria-describedby="basic-addon1"
            required />
        </div>
      </div>
    </div>
    <div class="card-body" id="chat-text" style="height: 300px; overflow-y: scroll">
    </div>
    <div class="card-footer text-muted">
      <div class="input-group mb-3">
        <textarea
          type="text"
          class="form-control"
          id="chat-mensaje"
          aria-describedby="button-addon2"></textarea>
        <button
          class="btn btn-outline-secondary"
          type="button"
          onclick="sendMenssaje()"
          id="button-addon2">
          Enviar
        </button>
      </div>
      <div class="text-center" id="compression-level"></div>
    </div>
  </form>
</div>
